.side-bar
  .side-bar__header
    .side-bar__header__profile
      .side-bar__header__profile__left
        = current_user.name
      .side-bar__header__profile__right
        = link_to new_group_path, class: "profile__right--icon" do
          = icon('fas','edit edit-color')
        = link_to edit_user_path(current_user), class: "profile__right--icon" do
          = icon('fas','cog', class: 'icon')

  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) ,class: "group__box" do
          .group__box__name
            = group.name
          .group__box__message
            = group.show_last_message
